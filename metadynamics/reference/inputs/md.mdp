; edited for plumed sys2 mwm1

; input handling
gen-vel                  = no
continuation             = yes

; integration
integrator               = md
dt                       = 0.004
nsteps                   = 1000000

; hydrogen mass repartitioning
mass-repartition-factor  = 3

; bonded interactions
constraints              = h-bonds
constraint-algorithm     = lincs
lincs-order              = 4
lincs-iter               = 1

; neighbor searching
cutoff-scheme            = Verlet
nstlist                  = 20
pbc                      = xyz

; electrostatics
coulombtype              = PME
pme-order                = 4
fourierspacing           = 0.12
rcoulomb                 = 1.2

; Van der Waals
vdwtype                  = cut-off
vdw-modifier             = force-switch
rvdw-switch              = 1
rvdw                     = 1.2

; center of mass motion removal
comm-mode                = linear

; thermostat
tcoupl                   = v-rescale
tc_grps                  = System
tau-t                    = 1
ref-t                    = 310.15

; barostat
pcoupl                   = c-rescale
pcoupltype               = semiisotropic
tau-p                    = 5
ref-p                    = 1.01325 1.01325
compressibility          = 4.5e-05 4.5e-05
refcoord-scaling         = com

; output control; frequencies in steps
nstxout                  = 0
nstvout                  = 0
nstlog                   = 50000
nstenergy                = 50000
nstxout-compressed       = 50000
